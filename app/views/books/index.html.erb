<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table width="500">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Publisher</th>
      <th>Review Conut</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.price %></td>
        <td><%= book.publisher %></td>
        <td><%= Review.where(book: book).count %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

